#include<stdio.h>

union bits {
	float f;
	long long n;
};

int main(){
	
	bits b;
	
	scanf ("%f", &b.f);
	
	int sign = (b.n & (1 << 31)) >> 31; 
	int exp = (b.n >> 23) & 0xFF;
	int man = (b.n  & (((1 << 31) >> 31) ^ ((1 << 31) >> 8)));
	
	printf("float = (-1)^%d * 1.%d * 2^(%d)", sign, man, (exp - 127));
	
	return 0;
}
